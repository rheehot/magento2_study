    $_post = $this->getPost();
    $_postUrl = $_post->getPostUrl();
    $_postName = $block->escapeHtml($_post->getTitle(), null, true);
    $height = 620;
    $width = 840;
    $helper = $this->helper('Magefan\Blog\Helper\Image');
?>
<li class="post-holder post-holder-<?php echo $_post->getId() ?>">
    <div class="post-image cdz-left">
        <a href="<?php echo $_postUrl ?>">                
             <img class="img-responsive" width="<?php echo $width ?>" height="<?php echo $height ?>" src="<?php echo $helper->init($_post->getFeaturedImg())->resize($width,$height); ?>" />
