					$strCutDesc = substr($desc, 0, $descLength);
					$desc = substr($strCutDesc, 0, strrpos($strCutDesc, ' ')).'&hellip;';
				}
				$desc = $this->stripTags($desc,null,true);
			?>
			<?php echo $desc; ?>
                
            </div>
			<a class="post-read-more" href="<?php echo $_postUrl ?>" title="<?php echo $_postName ?>"
			   >
