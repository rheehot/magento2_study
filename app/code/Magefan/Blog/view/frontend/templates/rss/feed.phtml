   <item>
      <title><?= $block->escapeHtml($_post->getTitle(), null, true) ?></title>
      <link><?= $_post->getPostUrl() ?></link>
      <guid><?= $_post->getPostUrl() ?></guid>
      <description><![CDATA[<?= $block->getPostContent($_post) ?>]]></description>
      <?php /*if ($featuredImage = $_post->getFeaturedImage()) { ?>
         <image><?= $featuredImage ?></image>
      <?php }*/ ?>
      <pubDate><?= $block->escapeHtml($_post->getPublishDate('r')) ?></pubDate>
      <?php foreach($_post->getParentCategories() as $category) { ?>
      <category><![CDATA[<?= $block->escapeHtml($category->getTitle()) ?>]]></category>
      <?php } ?>
   </item>
   <?php } ?>
